<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/rosa_sweetie</item>
        <item name="colorPrimaryDark">@color/rosa_sweetie_dark</item>
        <item name="actionMenuTextColor">@color/azzurro_pastello</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- background toolbar in support ActionMode -->
        <item name="android:actionModeBackground">@color/rosa_sweetie</item>
        <item name="actionModeBackground">@color/rosa_sweetie</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="EmojiconGridView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:columnWidth">40dp</item>
        <item name="android:horizontalSpacing">0dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:verticalSpacing">0dp</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/rosa_sweetie</item>
        <item name="tabIndicatorHeight">5dp</item>
        <item name="tabIndicatorColor">@color/yellow_sweetie</item>
        <item name="tabTextColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@color/yellow_sweetie</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ImagePickerTheme">
        <item name="colorPrimary">@color/rosa_sweetie</item>
        <item name="colorPrimaryDark">@color/rosa_sweetie_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Bookmarker_chat">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:src">@drawable/selector_image_bookmark</item>
        <item name="android:background">@null</item>
    </style>

    <style name="DateTime_chat">
        <item name="android:textColor">@color/rosa_sweetie</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
