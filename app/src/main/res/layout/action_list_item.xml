<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app2="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    
    <ImageView
            android:id="@+id/image_action_list_item"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="2.5dp"
            android:layout_marginStart="6dp"

            android:src="@drawable/test_female_user_icon128x128"

            app2:layout_constraintTop_toBottomOf="parent"
            app2:layout_constraintLeft_toRightOf="parent"
    />

    <TextView
            android:id="@+id/title_action_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"

            app2:layout_constraintTop_toBottomOf="parent"
            app2:layout_constraintLeft_toRightOf="@+id/image_action_list_item"

            android:text="Title actions"
            android:textSize="18dp"
    />

    <TextView
            android:id="@+id/subtitle_action_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:maxWidth="220dp"

            app2:layout_constraintTop_toBottomOf="@+id/title_action_list_item"
            app2:layout_constraintLeft_toRightOf="@+id/image_action_list_item"

            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam ut iaculis purus. Cras pharetra libero dui, non tempus nisl blandit."
            android:textSize="14dp"
            android:ellipsize="end"
            android:maxLines="1"
    />

</android.support.constraint.ConstraintLayout>