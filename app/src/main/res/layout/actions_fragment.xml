<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app2="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <android.support.v7.widget.RecyclerView
            android:id="@+id/actions_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_new_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="160dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:visibility="invisible"
            android:src="@drawable/action_photo_icon"
            app2:backgroundTint="@color/rosa_sweetie"
            app2:elevation="6dp"
            app2:pressedTranslationZ="12dp" />

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_new_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="90dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:visibility="invisible"
            android:src="@drawable/action_chat_icon"
            app2:backgroundTint="@color/rosa_sweetie"
            app2:elevation="6dp"
            app2:pressedTranslationZ="12dp" />

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_new_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/plus_icon"
            app2:backgroundTint="@color/rosa_sweetie"
    />

</FrameLayout>