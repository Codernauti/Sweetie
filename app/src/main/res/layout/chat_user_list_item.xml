    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/chat_item_bookmark_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
