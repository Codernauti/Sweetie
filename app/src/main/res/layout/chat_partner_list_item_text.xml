<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
            android:id="@+id/chat_partner_item_bookmark_button"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"

            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/selector_image_bookmark"
            android:background="@drawable/shape_circle"
    />

    <TextView
        android:id="@+id/chat_partner_item_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chat_partner_item_text_view"
        android:layout_toEndOf="@+id/chat_partner_item_text_view"
        android:textSize="12sp"
        />

    <io.github.rockerhieu.emojicon.EmojiconTextView
        app:emojiconSize="@dimen/emoticons"
        android:id="@+id/chat_partner_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"

        android:maxWidth="250dp"
        android:textSize="16sp"
        android:background="@drawable/shape_rounded_rectangle"
        android:padding="10dp"
        android:text="@string/lorem_ipsum"/>

</RelativeLayout>