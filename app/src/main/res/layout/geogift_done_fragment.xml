<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/geogift_maker_fragment_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wood_backgroud">


    <android.support.v7.widget.Toolbar
        android:id="@+id/geogift_done_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="4dp"
        android:background="@color/colorPrimary"
        app:theme="@style/SweetieThemeToolbar"
        app:popupTheme="@style/Theme.AppCompat.Light.NoActionBar" />

    <FrameLayout
        android:id="@+id/geogift_done_polaroid_container"
        android:layout_width="300dp"
        android:layout_height="360dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:elevation="10dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/geogift_done_image_thumb"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/image_geogift_placeholder"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/geogift_done_polaroid_text"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:textSize="20dp"
            android:fontFamily="casual"
            android:layout_gravity="bottom|center_horizontal"
            android:hint="@string/text_hint_geogift"/>
        <ImageView
            android:id="@+id/geogift_done_pin_polaroid"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/board_pin"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/geogift_done_postit_container"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:elevation="10dp"
        android:background="@color/yellow_sweetie">

        <TextView
            android:id="@+id/geogift_done_postit_text"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:gravity="center"
            android:textSize="25dp"
            android:fontFamily="casual"
            android:layout_gravity="center|center_vertical"
            android:hint="@string/text_hint_geogift"/>
        <ImageView
            android:id="@+id/geogift_done_pin_postit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/board_pin"/>

    </FrameLayout>


    <ImageView
        android:id="@+id/geogift_done_heart_picture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center|center_vertical"
        android:src="@drawable/heart_geogift"/>


</FrameLayout>